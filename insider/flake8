#!/usr/bin/env bash
set -e
[ "$VERBOSE" -lt 1 ] || set -x

# Check addons exist
INCLUDE_LINT="$(addons list -ifxs ' ' $ADDON_CATEGORIES)" || exit 0
export INCLUDE_LINT

# Activate insider dependencies
venv="/qa/py$(python -c 'import sys; print(sys.version[0])')"
source $venv/bin/activate
cd /qa/mqt
export PATH="$PATH:/qa/mqt/travis"

# Lint
test_flake8
